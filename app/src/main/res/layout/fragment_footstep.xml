<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorAccent"
    >

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="20dp"
         />

    <TextView
        android:id="@+id/footStepNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="0 Steps"
        android:textSize="70dp" />

    <ImageView
        android:id="@+id/footStep"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:contentDescription="Foot Step indicator"
        app:srcCompat="@drawable/footsteps"
        android:layout_gravity="center"/>

    <View
        android:id="@+id/divider5"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        />

    <Button
        android:id="@+id/measureButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start measuring"
        android:background="@drawable/buttonshape"
        android:textColor="@color/colorAccent"
        android:layout_gravity="center"/>

    <View
        android:id="@+id/divider4"
        android:layout_width="match_parent"
        android:layout_height="20dp"
       />



        <ListView
            android:id="@+id/footStepRecord"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">
        </ListView>


</LinearLayout>