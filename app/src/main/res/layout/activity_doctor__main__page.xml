<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Doctor_Main_Page">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        android:weightSum="2">

        <LinearLayout
            android:id="@+id/addpatient_view"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_gravity="start"
            android:background="@color/colorPrimaryDark"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true"
            android:layout_weight="1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:contentDescription="Add"
                android:src="@drawable/plus"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="@string/addpatient"
                android:gravity="center"
                android:textSize="18dp"
                android:textColor="@color/colorAccent" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/searchpatient_view"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_gravity="end"
            android:background="@color/colorPrimaryDark"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true"
            android:layout_weight="1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:contentDescription="Search"
                android:src="@drawable/magnify"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="@string/searchpatient"
                android:gravity="center"
                android:textSize="18dp"
                android:textColor="@color/colorAccent" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:id="@+id/patients_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ListView
                android:id="@+id/patients_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </ListView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>