<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Doctor_Main_Page">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_gravity="start"
            android:background="@color/colorPrimaryDark"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true"
            android:layout_weight="1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:contentDescription="Add"
                android:src="@drawable/plus"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="@string/addpatient"
                android:gravity="center"
                android:textSize="18dp"
                android:textColor="@color/colorAccent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_gravity="end"
            android:background="@color/colorPrimaryDark"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true"
            android:layout_weight="1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:contentDescription="Search"
                android:src="@drawable/magnify"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="@string/searchpatient"
                android:gravity="center"
                android:textSize="18dp"
                android:textColor="@color/colorAccent" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_paddingTop="8dp"
        android:background="@color/colorPrimary"
        android:layout_b>

        <ImageView
            android:id="@+id/profile_picture"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/roundbutton"
            android:src="@drawable/Ravell"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/profile_picture"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:id="@+id/id_textview"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:text="ID: 012345"
                android:textSize="16sp"
                android:textColor="#fff"/>

            <TextView
                android:id="@+id/fullname_textview"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:text="Name: Ravell Heerdegen"
                android:textSize="16sp"
                android:textColor="#fff"/>

        </LinearLayout>

    </RelativeLayout>


</LinearLayout>